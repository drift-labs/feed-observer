{
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "target": "ES2019",
      "alwaysStrict": true,
      "strictNullChecks": true,
      "strictFunctionTypes": true,
      "noImplicitReturns": true,
      "strictPropertyInitialization": true,
      "noImplicitThis": true,
      "resolveJsonModule": true,
      "declarationMap": true
    }
  },
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es2019",
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false,
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "declaration": true
  },
  "include": ["src/**/*", "lib/**/*"],
  "exclude": ["node_modules", "tests/**/*"]
}
